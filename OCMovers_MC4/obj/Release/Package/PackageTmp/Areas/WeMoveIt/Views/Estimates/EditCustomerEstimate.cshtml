@model OCMovers_MC4.ViewModel.CreateCustomerEstimate

@{
    ViewBag.Title = "CreateCustomerEstimate";
    Layout = "~/Areas/WeMoveIt/Views/Shared/_Layout.cshtml";
}
<div class="admin">
    <h2>Create Customer Estimate</h2>

    @using (Html.BeginForm("SaveCustomerEstimate", "Estimates"))
    {
        @Html.HiddenFor(x => x.EstimateFormId)

        <div class="form-group">
            Created: @Model.CreateDate
            @Html.HiddenFor(x => x.CreateDate)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.IntroText)
            <textarea id="IntroText" name="IntroText">@Model.IntroText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.CustomerName)
            @Html.TextBoxFor(x => x.CustomerName)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.PhoneNumber)
            @Html.TextBoxFor(x => x.PhoneNumber)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Start)
            @Html.TextBoxFor(x => x.Start)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.End)
            @Html.TextBoxFor(x => x.End)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.MoveDate)
            @Html.TextBoxFor(x => x.MoveDate, new { @class = "datepicker", Value = Model.MoveDate.ToString("d"), id = "to" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ArrivalTime)
            @Html.TextBoxFor(x => x.ArrivalTime)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ArrivalText)
            <textarea id="ArrivalText" name="ArrivalText">@Model.ArrivalText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.HourlyRateText)
            <textarea id="HourlyRateText" name="HourlyRateText">@Model.HourlyRateText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.TravelTimeText)
            <textarea id="TravelTimeText" name="TravelTimeText">@Model.TravelTimeText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Fuel)
            <textarea id="Fuel" name="Fuel">@Model.Fuel</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Tolls)
            <textarea id="Tolls" name="Tolls">@Model.Tolls</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ParkingPermitsText)
            <textarea id="ParkingPermitsText" name="ParkingPermitsText">@Model.ParkingPermitsText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.HoursEstimate)
            <textarea id="HoursEstimate" name="HoursEstimate">@Model.HoursEstimate</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.TotalEstimate)
            <textarea id="TotalEstimate" name="TotalEstimate">@Model.TotalEstimate</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ReadPoliciesText)
            <textarea id="ReadPoliciesText" name="ReadPoliciesText">@Model.ReadPoliciesText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ParkingPermits)
            <textarea id="ParkingPermits" name="ParkingPermits">@Model.ParkingPermitsText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ResponsibleText)
            <textarea id="ResponsibleText" name="ResponsibleText">@Model.ResponsibleText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ElevatorText)
            <textarea id="ElevatorText" name="ElevatorText">@Model.ElevatorText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.MattressCoverText)
            <textarea id="MattressCoverText" name="MattressCoverText">@Model.MattressCoverText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.StormText)
            <textarea id="StormText" name="StormText">@Model.StormText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.CancellationText)
            <textarea id="CancellationText" name="CancellationText">@Model.CancellationText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.PaymentsText)
            <textarea id="PaymentsText" name="PaymentsText">@Model.PaymentsText</textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.RepName)
            @Html.TextBoxFor(x => x.RepName)
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="gen-button" />
        </div>
    }
</div>
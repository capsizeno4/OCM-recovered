@model OCMovers_MC4.ViewModel.Address

<div id="addressForm" class="form-inline">
<div class="addressParts">
    <div class="field form-group odd">
        @*<div class="cancelBtn"><a href="#" id="cancelAddAddress">Cancel</a></div>*@
        @*<div class="clearfix"></div>*@
        <label>Address Type</label>
        <select class="select2 required type-select2 addressType" id="addressType" name="addressType" style="width: 100%">
            <option></option>
        </select>
    </div>

    <div class="field text form-group even">
        <label>Building Name</label>
        @Html.TextBoxFor(x => Model.BuildingName, new {autocomplete = "off"})
    </div>
    <div class="field form-group odd">
        <label>Address 1</label>
        @Html.TextBoxFor(x => Model.Address1, new {@class = "required", autocomplete = "address-line1"})
    </div>
    <div class="field form-group even">
        <label>Apartment Name or Number</label>
        @Html.TextBoxFor(x => Model.AptNum, new {autocomplete = "address-line2"})
    </div>

    <div class="field form-group odd">
        <label>City</label>
        @Html.TextBoxFor(x => Model.City, new {@class = "required", autocomplete = "address-level2"})
    </div>
    <div class="field form-group even">
        <label>State</label>
        <select autocomplete="address-level1" class="select2 required type-select2 state" id="loc1State" name="loc1State" style="width: 100%">
            <option></option>
        </select>
    </div>
    <div class="clearfix"></div>
    <div class="field horizontal postal form-group odd">
        <label>Postal Code</label>
        @Html.TextBoxFor(x => Model.Postcode, new {@class = "required short", autocomplete = "postal-code", onkeypress = "return isNumber(event)", maxLength = 5})
    </div>
</div>
    <div class="clearfix"></div>
    <div class="questionParts">
        <div class="field form-group">
            <div class="question">
                <p class="heading">What type of location is this?</p>
                <div class="field radio dropdown-field">
                    <div class="radio-group" id="rgroup-HouseOrApt">
                        <div class="input radio">
                            <div class="rbox rdio address" id="House"></div>
                            <label>House</label>
                        </div>
                        <div class="input radio">
                            <div class="rbox address" id="Apartment"></div>
                            <label>Apartment</label>
                        </div>
                        <div class="input radio">
                            <div class="rbox address" id="Office"></div>
                            <label>Office</label>
                        </div>
                        <div class="input radio">
                            <div class="rbox address" id="Storage-Unit" data-section="location"></div>
                            <label>Storage Unit</label>
                        </div>
                        @Html.HiddenFor(x => x.HouseOrApt, new {@class = "required type-radio"})
                    </div>
                </div>
            </div>

        </div>
        <input type="button" value="Clear location" class="btn btn-clearAddress inline" id="clearForm" style="margin-left: 0; margin-top: 20px;">
        <div id="addressTypeForm"></div>
    </div>
</div>
